<Window x:Class="WpfTesterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTesterApp"
        mc:Ignorable="d"
        Title="Fun with Panels!" Height="285" Width="325" MouseMove="MainWindow_MouseMove">
    <Grid Width="325" Height="285">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ClickMe" Content="Click" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="40" Width="75" FontWeight="Bold" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE7D0FF"/>
                    <GradientStop Color="#FF993FFA" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Calendar Name="MyCalendar" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Height="168" Width="179" SelectedDatesChanged="MyCalendar_SelectedDatesChanged"/>
    </Grid>
</Window>
